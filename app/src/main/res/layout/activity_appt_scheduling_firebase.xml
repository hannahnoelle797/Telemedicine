<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="5dp"
    tools:context=".ui.scheduling.ApptSchedulingFirebase">

    <TextView
        android:id="@+id/headerScheduleAppt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:textSize="33sp"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:text="@string/header_appt_sched"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/appt_type">
    </TextView>

    <TextView
        android:id="@+id/appt_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:text="@string/label_appt_type"
        android:textAlignment="gravity"
        android:textColor="@color/colorText"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/spinner_appt_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerScheduleAppt">
    </TextView>

    <Spinner
        android:id="@+id/spinner_appt_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:minHeight="60dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appt_type"
        app:layout_constraintBottom_toTopOf="@id/label_loc">
    </Spinner>

    <TextView
        android:id="@+id/label_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/appt_loc_header"
        android:textAlignment="gravity"
        android:textColor="@color/colorText"
        android:visibility="invisible"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@id/spinner_appt_loc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_appt_type">
    </TextView>

    <Spinner
        android:id="@+id/spinner_appt_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:visibility="invisible"
        android:minHeight="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_loc"
        app:layout_constraintBottom_toTopOf="@id/label_doctor">
    </Spinner>

    <TextView
        android:id="@+id/label_doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/label_doctor"
        android:textAlignment="gravity"
        android:visibility="invisible"
        android:textColor="@color/colorText"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@id/spinner_appt_loc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_doctor">
    </TextView>

    <Spinner
        android:id="@+id/spinner_doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:visibility="invisible"
        android:spinnerMode="dropdown"
        android:minHeight="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_doctor"
        app:layout_constraintBottom_toTopOf="@id/appt_date">
    </Spinner>

    <TextView
        android:id="@+id/appt_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/label_appt_date"
        android:textAlignment="gravity"
        android:textColor="@color/colorText"
        android:visibility="invisible"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@id/button_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_doctor">
    </TextView>

    <Button
        android:id="@+id/button_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorChatA"
        android:visibility="invisible"
        android:text="@string/button_appt_date"
        android:textSize="25sp"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@id/appt_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appt_date">
    </Button>

    <TextView
        android:id="@+id/appt_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/label_appt_time"
        android:textAlignment="gravity"
        android:textColor="@color/colorText"
        android:visibility="invisible"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@id/spinner_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_date">
    </TextView>

    <Spinner
        android:id="@+id/spinner_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:minHeight="60dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appt_time"
        app:layout_constraintBottom_toTopOf="@id/button_appt_submit">
    </Spinner>

    <Button
        android:id="@+id/button_appt_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorChatB"
        android:textColor="@color/colorText"
        android:text="@string/button_submit_appt"
        android:visibility="invisible"
        android:textSize="25sp"
        android:padding="10dp"
        android:onClick="apptClick"
        app:layout_constraintTop_toBottomOf="@id/spinner_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>